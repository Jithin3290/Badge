import React, { useState, useRef } from "react";

export default function App() {
  const [item, setItem] = useState([])
  const [check, setCheck] = useState(null)
  const [value, setValue] = useState();
  const [search, setSearch] = useState("")
  const r = useRef()
  function handle1() {
    const data = r.current.value
    setItem([...item, data])
    r.current.value = ""
  }
  function handle2(i) {
    const newArr = [...item]
    newArr.splice(i, 1)
    setItem(newArr)
  }
  function handle3(i) {
    setCheck(i);
  }
  function handle4(i) {
    const newArr = [...item]
    newArr[i] = value
    setItem(newArr)
    setCheck(null)
  }

  const filtered = item.filter((d) => d.includes(search))

  return (
    <div style={{ backgroundColor: "aliceblue", padding: 20, fontFamily: "Arial" }}>
      <h1 style={{ textAlign: "center", color: "#333" }}>Todo List</h1>

      <div style={{ marginBottom: 10 }}>
        <input
          type="text"
          ref={r}
          style={{ padding: 5, borderRadius: 5, border: "1px solid #333", marginRight: 5 }}
        />
        <button
          onClick={handle1}
          style={{ padding: 5, borderRadius: 5, border: "1px solid red"}}
        >
          Add
        </button>
      </div>

      <div style={{ marginBottom: 20 }}>
        <input
          type="text"
          placeholder="Search..."
          onChange={(e) => setSearch(e.target.value)}
          style={{ padding: 5, borderRadius: 5, border: "1px solid #333" }}
        />
      </div>

      <ul style={{ padding: 0 }}>
        {filtered.map((data, i) => (
          <li
            key={i}
            style={{
              listStyle: "none",
              padding: 10,
              marginBottom: 10,
              backgroundColor: "#fff",
              borderRadius: 5,
              display: "flex",
              alignItems: "center",
              justifyContent: "space-between",
            }}
          >
            <span>{i}: {data}</span>

            <div>
              <button
                onClick={() => handle2(i)}
                style={{ padding: 5, borderRadius: 5, border: "1px solid red", marginRight: 5, cursor: "pointer" }}
              >
                Remove
              </button>
              <button
                onClick={() => handle3(i)}
                style={{ padding: 5, borderRadius: 5, border: "1px solid red", cursor: "pointer" }}
              >
                Edit
              </button>
            </div>

            {check === i && (
              <div style={{ marginLeft: 10 }}>
                <input
                  type="text"
                  onChange={(e) => setValue(e.target.value)}
                  style={{ padding: 5, borderRadius: 5, border: "1px solid #333", marginRight: 5 }}
                />
                <button
                  onClick={() => handle4(i)}
                  style={{ padding: 5, borderRadius: 5, border: "1px solid green", cursor: "pointer" }}
                >
                  Save
                </button>
              </div>
            )}
          </li>
        ))}
      </ul>
    </div>
  );
}
